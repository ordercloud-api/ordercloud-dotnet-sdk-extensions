<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <Version>0.4.0</Version>

	  <PackageId>OrderCloud.AzureApp</PackageId>
	  <Title>OrderCloud SDK Extensions for Azure App Services</Title>
	  <Authors>Four51</Authors>
	  <Description>Building blocks for creating solutions with ASP.NET Core 2.0 and WebJobs that run on Azure and integrate with OrderCloud.io.</Description>
	  <Copyright>Copyright 2018 Four51, Inc.</Copyright>
	  <PackageProjectUrl>https://ordercloud.io/</PackageProjectUrl>
	  <PackageIconUrl>https://ordercloud.io/wp-content/uploads/2018/01/oc-circle-logo-2018.png</PackageIconUrl>
	  <PackageTags>ecommerce b2b azure aspnetcore webjobs four51 ordercloud</PackageTags>
	  <PackageLicenseUrl>https://raw.githubusercontent.com/ordercloud-api/ordercloud-dotnet-sdk-extensions/master/LICENSE</PackageLicenseUrl>
	  <RepositoryUrl>https://github.com/ordercloud-api/ordercloud-dotnet-sdk-extensions</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\OrderCloud.AzureApp.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.1.3" />
	  <PackageReference Include="Microsoft.AspNetCore.Authentication" Version="2.1.2" />
	  <PackageReference Include="Microsoft.AspNetCore.Authorization" Version="2.1.2" />
	  <PackageReference Include="Microsoft.AspNetCore.TestHost" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="2.1.1" />
    <PackageReference Include="OrderCloud.SDK" Version="0.6.9" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="5.3.0" />
  </ItemGroup>

</Project>
